<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(this.User))
    {
        var userId = UserManager.GetUserId(this.User);

        @if (sheltersService.IsShelter(userId) && !this.User.IsInRole(AdminRoleName))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Pets" asp-action="MyPets">My pets</a>
            </li>
             <li class="nav-item">
                <a class="nav-link text-dark" asp-controller="Adoptions" asp-action="AdoptionRequests">Adoption requests</a>
            </li>
        }

        else if (!this.User.IsInRole(AdminRoleName) 
            && (!sheltersService.RegistrationIsSubmitted(userId))
            && (!this.User.IsInRole(AdopterRoleName)))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Shelters" asp-action="Create">Register as shelter</a>
            </li>
        }

        else if (this.User.IsInRole(AdminRoleName))
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Administration" asp-controller="AdminPanel" asp-action="Index">Administration panel</a>
            </li>
        }

        <li class="nav-item">
            <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>

        <li>
            <a class="notifications-count" 
               asp-controller="Notifications"
               asp-action="AllNotifications"
               id="notificationsCount"
               data-toggle="tooltip"
               title="Your Notifications"></a>
        </li>

        <li class="nav-item">
            <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
