@model AllPetsViewModel

@{
    ViewBag.Title = "All Pets at one place";
}

<form method="get">
    <div class="row">
        <div class="form-group col-md-4">
            <div class="form-group">
                <select asp-for="Species" class="form-control">
                    <option value="" disabled selected>Choose your favourite species</option>
                    <option value="">All</option>
                    @foreach (var species in Model.AllSpecies)
                    {
                        <option value="@species">@species</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group col-md-4">
            <button type="submit" class="btn btn-light">Search</button>
        </div>
    </div>
</form>


<div class="row">
    @foreach (var pet in Model.Pets)
    {
        <div class="col-md-4">
            <div class="card-group mb-3">
                <div class="card border-info mb-3">
                    <div class="embed-responsive embed-responsive-4by3">
                        <img class="card-img-top embed-responsive-item" src="@pet.ImageUrl" alt="Card image cap">
                    </div>
                    <div class="card-body text-center">
                        <h4 class="card-title text-center">@pet.Name</h4>
                        <p class="card-text text-center">@pet.Gender, @pet.Breed - @pet.Age years old</p>
                        <a asp-controller="Pets" asp-action="Details" asp-route-id="@pet.Id" class="btn btn-info">Details</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
